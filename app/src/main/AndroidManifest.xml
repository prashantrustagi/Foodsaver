<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cdac.foodsaver">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodsaver"
        android:usesCleartextTraffic="true">
        <activity android:name=".ngosignup"></activity>
        <activity android:name=".ngologin" />
        <activity android:name=".finalPost" />
        <activity android:name=".welcomeScreen" />
        <activity android:name=".splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".createFoodListing" />
        <activity android:name=".addFoodItem" />
        <activity android:name=".Settings" />
        <activity android:name=".Profile" />
        <activity android:name=".Privacy" />
        <activity android:name=".Orders" />
        <activity android:name=".Help" />
        <activity android:name=".ViewAllActivity" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
        <activity android:name=".signup" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>