<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:layout_margin="2dp"
    android:id="@+id/avil_listlayout">

    <ImageView
        android:id="@+id/food_imagengo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="false"
        android:background="@drawable/round_bg"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_namengolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="right"
        android:text="ABC Restaurant"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/food_imagengo"
        app:layout_constraintTop_toTopOf="@+id/food_imagengo" />

    <TextView
        android:id="@+id/foodlistngo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Food List"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/locationrest"
        app:layout_constraintStart_toStartOf="@+id/restaurant_namengolist"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_namengolist" />

    <TextView
        android:id="@+id/locationrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Location Restaurant"
        android:textColor="#FE554A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/food_imagengo"
        app:layout_constraintStart_toStartOf="@+id/foodlistngo" />

    <TextView
        android:id="@+id/listperish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="left"
        android:text="Perish Time"
        android:textColor="#FE554A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/locationrest"
        app:layout_constraintStart_toEndOf="@+id/locationrest" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>