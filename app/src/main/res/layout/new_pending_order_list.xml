<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_margin="2dp"
        android:background="@drawable/list_layout">

        <ImageView
            android:id="@+id/image_rec"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="false"
            android:background="@drawable/round_bg"
            app:srcCompat="@drawable/burgerlisting"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_name_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="ABC NGO"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_rec"
            app:layout_constraintTop_toTopOf="@+id/image_rec" />

        <TextView
            android:id="@+id/food_type_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="$6.5"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/perish_time_rec"
            app:layout_constraintStart_toStartOf="@+id/item_name_rec"
            app:layout_constraintTop_toBottomOf="@+id/item_name_rec"  />

        <TextView
            android:id="@+id/perish_time_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Time"
            android:textColor="#FE554A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_rec"
            app:layout_constraintStart_toStartOf="@+id/food_type_rec" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>