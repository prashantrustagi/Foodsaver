<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    tools:context=".ngosignup">

    <TextView
    android:id="@+id/textViewngos1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="46dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="46dp"
    android:fontFamily="@font/montserrat"
    android:text="Create NGO account"
    android:textColor="#1C1C1C"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewngos2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="@font/montserrat"
        android:text="Welcome friend, enter your details so lets get started"
        android:textColor="#3D3D3D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewngos1" />



    <TextView
        android:id="@+id/textViewngos3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="46dp"
        android:text="Email Address"
        android:textColor="#3D3D3D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewngos2"
        tools:layout_editor_absoluteY="257dp" />

    <EditText
        android:id="@+id/email_signupngo"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/text_back"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Email address"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewngos3" />

    <TextView
        android:id="@+id/textViewngos4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Password"
        android:textColor="#3D3D3D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_signupngo" />

    <EditText
        android:id="@+id/pswd_signupngo"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/text_back"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewngos4" />

    <TextView
        android:id="@+id/textViewngos5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="@font/montserrat"
        android:text="Location"
        android:textColor="#3D3D3D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pswd_signupngo" />

    <EditText
        android:id="@+id/location_signupngo"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_back"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Location"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewngos5" />

    <Button
        android:id="@+id/createAcc_btnngo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/montserrat"
        android:text="Create an account"
        app:backgroundTint="#03DAC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_signupngo" />

    <TextView
        android:id="@+id/textViewngos6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="30dp"
        android:text="Already Registered?"
        android:textColor="#3D3D3D"
        app:layout_constraintEnd_toStartOf="@+id/loginNow_txt"
        app:layout_constraintHorizontal_bias="0.729"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAcc_btnngo" />

    <TextView
        android:id="@+id/loginNow_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/montserrat"
        android:text="Login Now"
        android:textColor="#3D3D3D"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewngos6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewngos6"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>